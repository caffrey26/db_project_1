<p id="notice"><%= notice %></p>
<p>
  <strong>Name:</strong>
  <%= @player.name %>
</p>

<p>
  <strong>City:</strong>
  <%= @player.city %>
</p>

<p>
  <strong>Win count:</strong>
  <%= @player.win_count %>
</p>
<p>
<strong><%= @player.name %>'s Pokemons: </strong>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Dex number</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @player.pokemons.each do |pokemon| %>
      <tr>
        <td><%= pokemon.name %></td>
        <td><%= pokemon.dex_number %></td>
        <td><img alt= <%= pokemon.name%> src= <%=pokemon.image%> width="50" height="50" /></td> 
        <td><%= link_to 'Show', pokemon %></td>
      </tr>
    <% end %>
  </tbody>
</table>


</p>


<%= link_to 'Add Pokemons', select_one_path(:player_id => @player.id) %> |
<%= link_to 'Edit', edit_player_path(@player) %> |
<%= link_to 'Back', players_path %>
